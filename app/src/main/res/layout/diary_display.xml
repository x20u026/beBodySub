<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/myImageView"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:background="@color/black"
            android:scaleType="fitCenter"
            />

        <!-- 身長 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:textAlignment="center"
                android:text="身長"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/heightTextView"
                android:layout_width="100dp"
                android:layout_height="50dp"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="cm"
                android:textSize="16sp" />
        </LinearLayout>

        <!--体重-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:textAlignment="center"
                android:textSize="16dp"
                android:text="体重" />

            <TextView
                android:id="@+id/weightTextView"
                android:layout_width="100dp"
                android:layout_height="50dp"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="kg"
                android:textSize="16dp" />
        </LinearLayout>

        <!--消費カロリー-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:textAlignment="center"
                android:text="消費カロリー"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/inKrlTextView"
                android:layout_width="100dp"
                android:layout_height="50dp"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="kcal"
                android:textSize="16dp"/>
        </LinearLayout>

        <!--摂取カロリー-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:textAlignment="center"
                android:textSize="16dp"
                android:text="摂取カロリー" />

            <TextView
                android:id="@+id/outKrlTextView"
                android:layout_width="100dp"
                android:layout_height="50dp"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="kcal"
                android:textSize="16dp" />
        </LinearLayout>

        <!--食事履歴-->
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:text="食事履歴"
            android:textSize="16dp" />

        <!--朝食-->
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:text="朝食"
            android:textSize="16dp" />

        <Button
            android:id="@+id/breakfastBtn"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="セットする" />

        <!--昼食-->
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="16dp"
            android:text="昼食" />

        <Button
            android:id="@+id/lunchBtn"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="セットする" />

        <!--夕食-->
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="16dp"
            android:text="夕食" />

        <Button
            android:id="@+id/dinnerBtn"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="セットする" />

        <!--トレーニング履歴-->
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:text="トレーニング履歴"
            android:textSize="16dp" />

        <Button
            android:id="@+id/workoutBtn"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="セットする" />

        <!--コメント-->
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:text="コメント"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/commentTextView"
            android:layout_width="100dp"
            android:layout_height="50dp"/>

        <!--画面遷移-->
        <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_below="@id/calendarView"
            android:layout_centerHorizontal="true"
            android:backgroundTint="#40a798"
            android:text="戻る" />

    </LinearLayout>
</ScrollView>
